{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es2017", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "removeComments": true,
        "outDir": "./dist"
    },
    "include": ["./src/**/*", "index.ts"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
